    "start-remote": "vite --host",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@pwabuilder/pwainstall": "^1.6.7",
    "@shoelace-style/shoelace": "^2.0.0-beta.83",
